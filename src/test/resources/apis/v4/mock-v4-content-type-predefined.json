{
    "id": "v4-mock-content-type-predefined",
    "name": "v4-mock-content-type-predefined",
    "apiVersion": "1.0",
    "definitionVersion": "4.0.0",
    "type": "proxy",
    "listeners": [
        {
            "type": "http",
            "paths": [
                {
                    "path": "/v4-mock-content-type-predefined"
                }
            ],
            "entrypoints": [
                {
                    "type": "http-proxy"
                }
            ]
        }
    ],
    "endpointGroups": [
        {
            "name": "default-group",
            "type": "http-proxy",
            "endpoints": [
                {
                    "name": "default",
                    "type": "http-proxy",
                    "weight": 1,
                    "inheritConfiguration": false,
                    "configuration": {
                        "target": "http://localhost:8080/endpoint"
                    }
                }
            ]
        }
    ],
    "flows": [
        {
            "name": "flow-1",
            "enabled": true,
            "request": [
                {
                    "name": "Mock",
                    "enabled": true,
                    "policy": "mock",
                    "configuration": {
                        "status": 200,
                        "headers": [
                            {
                                "name": "Content-Type",
                                "value": "application/custom+json"
                            }
                        ],
                        "content": "{\"message\":\"hello\"}"
                    }
                }
            ]
        }
    ]
}
