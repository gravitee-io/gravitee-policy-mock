{
    "id": "v2-mock-header-el-error",
    "name": "v2-mock-header-el-error",
    "gravitee": "2.0.0",
    "proxy": {
        "context_path": "/v2-mock-header-el-error",
        "endpoints": [
            {
                "name": "default",
                "target": "http://localhost:8080/endpoint",
                "http": {
                    "connectTimeout": 3000,
                    "readTimeout": 60000
                }
            }
        ]
    },
    "flows": [
        {
            "name": "flow-1",
            "methods": ["GET"],
            "enabled": true,
            "path-operator": {
                "path": "/",
                "operator": "STARTS_WITH"
            },
            "pre": [
                {
                    "name": "Mock",
                    "enabled": true,
                    "policy": "mock",
                    "configuration": {
                        "status": 200,
                        "headers": [
                            {
                                "name": "X-Valid-Header",
                                "value": "valid-value"
                            },
                            {
                                "name": "X-Invalid-EL-Header",
                                "value": "{#request.invalid..syntax}"
                            }
                        ],
                        "content": "{\"status\":\"ok\"}"
                    }
                }
            ],
            "post": []
        }
    ]
}
